                              |                                                 Disable
                        label.col-form-label.pt-0  Product Upload
                          .upload
                              .upload-files
                                  header
                                      p
                                        i.fa.fa-cloud-upload(aria-hidden='true')
                                        span.up up
                                        span.load load
                                  #drop.body
                                      i.fa.fa-file-text-o.pointer-none(aria-hidden='true')
                                      p.pointer-none
                                        b Drag and drop
                                        |  files here 
                                        br
                                        |  or 
                                        a#triggerFile(href='') browse
                                        |  to begin the upload
                                      input(type='file' name='prdImage' multiple='multiple')
                                  footer
